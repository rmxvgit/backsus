generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Hospital {
  cnes   Int     @id
  name   String
  estado String
  laudos Laudo[]
}

model Laudo {
  id           Int      @id @default(autoincrement())
  Hospital     Hospital @relation(fields: [hospitalCnes], references: [cnes])
  hospitalCnes Int
  start        String
  end          String
  estado       String
  fileName     String   @unique
  ready        Boolean
}
